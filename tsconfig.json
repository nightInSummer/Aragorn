{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "module": "commonjs",
    "target": "es2015",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "outDir": "./built"
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
   "exclude": [
     "node_modules"
   ]
}